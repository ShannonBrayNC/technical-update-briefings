{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "size": "Medium",
      "text": "${title}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "spacing": "None",
      "text": "${product} \u00b7 ${category} \u00b7 ${status}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${summary}",
      "wrap": true,
      "maxLines": 6
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Impact",
          "value": "${impact}"
        },
        {
          "title": "Action",
          "value": "${actionRequired}"
        },
        {
          "title": "Phase",
          "value": "${rolloutPhase}"
        },
        {
          "title": "Updated",
          "value": "${DATEFORMAT(lastUpdatedAt, 'MMM dd, yyyy')}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Explain this change",
      "data": {
        "action": "explain",
        "topicId": "${id}"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "Open details",
      "url": "${links[0].url}"
    }
  ]
}